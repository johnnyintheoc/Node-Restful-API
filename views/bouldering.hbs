<section>
    <div class="container-fluid">
        <h1 class="mt-5">Bouldering</h1>

        <div class="row padding">
            {{#each data}}
            <div class="col-md-3 mt-5">
                <div class="card">
                    <a href="https://www.youtube.com/channel/{{channelId}}" data-toggle="modal" data-target="#vidModal{{videoId}}"><img class="card-img-top" src="{{thumbnailUrl}}" alt="" /></a>
                    <div class="card-body">
                        <h5 class="card-title">
                            {{title}}
                        </h5>
                        <p class="card-text">
                            {{channelTitle}}
                            <br>{{description}}
                        </p>
                        <p class="blockquote-footer">Published: {{publishedAt}}</p>
                        <a href="#vidModal{{vidId}}" class="btn btn-outline-secondary" data-toggle="modal" data-target="#vidModal{{videoId}}">View Video</a>
                    </div>
                </div>
            </div>

            <!-- card modals (hidden) -->
            <div class="modal fade" id="vidModal{{videoId}}" tabindex="-1" role="dialog" aria-labelledby="vidModalLabel{{videoId}}" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="vidModalLabel{{videoId}}">{{title}}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid text-center">
                                <iframe width="560" height="315" src="https://www.youtube.com/embed/{{videoId}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</section>